@model Pooshineh.Models.DiscountViewModel

@using (Html.BeginForm("ApplyDiscountCode", "Discounts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.TextBoxFor(model => model.DiscountCode, new { @class = "form-control my-2", placeholder = "کد تخفیف", id = "DiscountCode", style = "width: 200px;" })
        @Html.ValidationMessageFor(model => model.DiscountCode, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 my-2">
            <input type="submit" value="اعمال کد تخفیف" class="btn btn-primary" />
        </div>
    </div>
}
