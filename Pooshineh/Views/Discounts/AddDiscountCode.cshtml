﻿@model Pooshineh.Models.Table_Discounts

@{
    ViewBag.Title = "AddDiscountCode";
    Pooshineh.Models.ClothingStoreEntities1 db = new Pooshineh.Models.ClothingStoreEntities1();
    var user = db.Table_User.Where(u => u.PhoneNumber == User.Identity.Name).FirstOrDefault();
}

@if (user.Table_Roles.RoleName == "Admin")
{
    <div class="text-center bg-info py-5 fw-bolder rounded-1 text-white my-5 "><h3>درج کد تخفیف</h3></div>



    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-5 my-3 my-lg-0 w-25">
                    @Html.LabelFor(model => model.DiscountCode, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiscountCode, new { htmlAttributes = new { @class = "form-control w-100" } })
                        @Html.ValidationMessageFor(model => model.DiscountCode, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-5 my-3 my-lg-0 w-25">
                    @Html.LabelFor(model => model.TotalDiscount, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TotalDiscount, new { htmlAttributes = new { @class = "form-control w-100" } })
                        @Html.ValidationMessageFor(model => model.TotalDiscount, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="row mt-5">
                @Html.ActionLink("بازگشت", "Index", "Discounts", null, new { @class = "btn btn-primary mx-2 rounded-1" }) |
                <input type="submit" style="width:120px !important;" value="درج کردن" class="btn btn-success mx-2" />
            </div>

        </div>
    }
}
else
{
    <br />
    <div class="text-center bg-danger py-5 fw-bolder rounded-1 text-white mt-5"><h3>دسترسی محدود می‌باشد</h3></div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>