﻿@model Pooshineh.Models.LoginViewModel

@{
    ViewBag.Title = "ورود";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/log.css" rel="stylesheet" />
    <style>
        * {
            font-family: Vazirmatn;
        }
    </style>
</head>

<body dir="rtl" lang="fa">
    <div class="wrapper">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="login-box">
                <div class="login-header">
                    <Span>ورود</Span>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="input-box">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "input-field", required = "required" } })
                    @Html.LabelFor(model => model.PhoneNumber, "نام کاربری", htmlAttributes: new { @class = "label" })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger ms-3 h6 mt-2" })
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                              stroke-width="1.5"
                              d="M5 20v-1a7 7 0 0 1 7-7v0a7 7 0 0 1 7 7v1m-7-8a4 4 0 1 0 0-8a4 4 0 0 0 0 8" />
                    </svg>
                </div>

                <div class="input-box">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input-field", required = "required", type = "password" } })
                    @Html.LabelFor(model => model.Password, "رمز عبور", htmlAttributes: new { @class = "label" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger  ms-3 h6 mt-2" })
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                        <path fill="currentColor"
                              d="M6.615 21q-.67 0-1.143-.472Q5 20.056 5 19.385v-8.77q0-.67.472-1.143Q5.944 9 6.615 9H8V7q0-1.671 1.164-2.836T12 3q1.671 0 2.836 1.164T16 7v2h1.385q.67 0 1.143.472q.472.472.472 1.143v8.77q0 .67-.472 1.143q-.472.472-1.143.472zm0-1h10.77q.269 0 .442-.173t.173-.442v-8.77q0-.269-.173-.442T17.385 10H6.615q-.269 0-.442.173T6 10.615v8.77q0 .269.173.442t.442.173M12 16.5q.633 0 1.066-.434q.434-.433.434-1.066t-.434-1.066Q12.633 13.5 12 13.5t-1.066.434Q10.5 14.367 10.5 15t.434 1.066q.433.434 1.066.434M9 9h6V7q0-1.25-.875-2.125T12 4q-1.25 0-2.125.875T9 7zM6 20V10z" />
                    </svg>
                </div>

                <div class="remember-forgot">
                    <div class="remember-me">
                        @Html.CheckBox("remember", false, new { id = "remember" })
                        @Html.Label("remember", "بخاطر سپردن")
                    </div>
                    <div class="remember-forgot">
                        @Html.ActionLink("بازیابی رمز عبور", "#")
                    </div>
                </div>
                <div class="input-box">
                    @Html.TextBox("submit", "ورود", new { @type = "submit", @class = "input-submit" })
                </div>
                <div class="register">
                    <span>@Html.ActionLink("تا حالا ثبت نام نکرده اید ؟ ثبت نام کنید", "SignUp")</span>
                </div>
            </div>
        }

    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
